<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity"
    android:orientation="vertical"
    android:background="@drawable/backgroundgradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/ll"
        android:background="@color/dark_blue">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textAlignment="center"
            android:textColor="#ffc947"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10pt"
        android:layout_marginTop="20pt"
        android:layout_marginEnd="10pt"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="65sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/contactGetInTouch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact us For Details"
                android:textAlignment="center"
                android:textColor="#0a1931"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contactDropMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Feel free to drop us a line below"
                android:textColor="#ffc947"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phoneMessageTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="10dp"
                android:hint="+91-998-XXX-XXX"
                android:padding="7dp"
                android:textColor="#0a1931"
                android:textColorHint="#848484"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/buyMessageTxt"
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="10dp"
                android:background="#efefef"
                android:hint="Type your message here ..."
                android:inputType="textEmailAddress"
                android:padding="7dp"
                android:textColor="#0a1931"
                android:textColorHint="#848484"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sendMessageTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:backgroundTint="#0a1931"
                android:text="SEND"
                android:textColor="#efefef"
                app:cornerRadius="0sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>