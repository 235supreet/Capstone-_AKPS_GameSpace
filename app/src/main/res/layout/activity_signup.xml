<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/backgroundgradient"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="17sp"
        android:background="#0a1931">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="5sp"
                android:paddingTop="20sp"
                android:text="Create an Account"
                android:fontFamily="@font/crowdtxt"
                android:textAlignment="center"
                android:textColor="#ffc947"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/signUpStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="#ff0000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/signUpName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70dp"
                android:layout_marginTop="20dp"
                android:background="#efefef"
                android:textColorHint="#0a1931"
                android:textColor="#0a1931"
                android:hint="Name"
                android:inputType="textPersonName"
                android:padding="7dp" />

            <EditText
                android:id="@+id/signUpPhone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70sp"
                android:layout_marginTop="15sp"
                android:hint="Phone"
                 android:padding="7dp"
                android:background="#efefef"
                android:textColorHint="#0a1931"
                android:textColor="#0a1931"/>

            <EditText
                android:id="@+id/signUpMail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70sp"
                android:layout_marginTop="15sp"
                android:hint="Email"
                 android:padding="7dp"
                android:background="#efefef"
                android:textColorHint="#0a1931"
                android:textColor="#0a1931"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70sp"
                android:layout_marginTop="15sp"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:padding="7dp"
                android:background="#efefef"
                android:textColorHint="#0a1931"
                android:textColor="#0a1931"/>

            <EditText
                android:id="@+id/confirmPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70sp"
                android:layout_marginTop="15sp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="7dp"
                android:background="#efefef"
                android:textColorHint="#0a1931"
                android:textColor="#0a1931"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:backgroundTint="#185adb"
                android:text="Create Account"
                android:textColor="#efefef"
                app:cornerRadius="0sp"/>

            <TextView
                android:id="@+id/loginSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="30sp"
                android:text="Have an account? Click to Login"
                android:textAlignment="center"
                android:textColor="#ffc947"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>