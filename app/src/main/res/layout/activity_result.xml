<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroundgradient"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="17sp"
        android:background="#0a1931"
        android:orientation="vertical"
        android:paddingHorizontal="20sp"
        android:paddingVertical="20sp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25sp"
            android:background="#185adb"
            android:paddingVertical="10sp"
            android:text="Results"
            android:textAlignment="center"
            android:textColor="#efefef"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25sp"
            android:paddingVertical="4sp"
            android:text="Points have been added to your profile!\nPlay more to unlock more coupons"
            android:textAlignment="center"
            android:textColor="#ffc947"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvres"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="50dp"
            android:text=" "
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#efefef"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/tvres2"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="31dp"
            android:gravity="center_horizontal"
            android:text=" "
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#efefef"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/tvres3"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="33dp"
            android:text=" "
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#efefef"
            android:textSize="19dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRestart"
            android:layout_width="110sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30sp"
            android:backgroundTint="#ffc947"
            android:text="Back"
            android:textColor="#0a1931"
            app:cornerRadius="0sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#efefef"
            android:text="Check profile"
            android:textColor="#0a1931"
            app:cornerRadius="0sp" />

    </LinearLayout>

</RelativeLayout>